# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aibio_center
ENVIRONMENT=production

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
PYTHON_ENV=production

# API 설정
ALLOWED_ORIGINS=["https://aibio.center", "https://www.aibio.center", "http://localhost:5173", "http://localhost:5174"]
API_PREFIX=/api/v1

# Redis 캐시 (선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_ENABLED=true

# Kakao API
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_SENDER_KEY=your-sender-key-here
KAKAO_TEMPLATE_CODE=your-template-code

# Business Info
BUSINESS_PHONE=02-1234-5678
BUSINESS_ADDRESS=서울시 강남구 테헤란로 123

# 파일 업로드
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["xlsx", "xls", "csv", "pdf", "png", "jpg", "jpeg"]
UPLOAD_PATH=./uploads

# 로깅
LOG_LEVEL=INFO
LOG_FILE=logs/aibio_center.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 백업
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/aibio_center

# 성능 튜닝
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
KEEPALIVE=5
TIMEOUT=120

# API 제한
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# 모니터링
SENTRY_DSN=your-sentry-dsn-here
MONITORING_ENABLED=true